---
import type { HTMLAttributes } from 'astro/types';

type Props = HTMLAttributes<'a'> & {
  alias?: string;
};

const { href, class: className, alias, ...props } = Astro.props;

const { pathname } = Astro.url;
const isActive =
  href === pathname ||
  href === pathname.replace(/\/$/, '') ||
  (alias && pathname.includes(alias));
---

<a
  href={href}
  class:list={[
    'inline-block px-3 py-2 transition-all duration-200 text-gray-400 hover:text-purple-300 hover:scale-105',
    className,
    {
      'font-medium border-b-2 border-purple-600 text-purple-400': isActive,
    },
  ]}
  {...props}
>
  <slot />
</a>
